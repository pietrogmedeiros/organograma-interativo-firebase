FROM node:20-alpine

WORKDIR /app

# Install dependencies first (use npm ci if lockfile exists, else fallback to npm install)
COPY package*.json ./
RUN if [ -f package-lock.json ]; then npm ci --omit=dev; else npm install --omit=dev; fi

# Copy the rest of the project files into the image
COPY . .

# Default entrypoint allows passing shell commands easily via compose "command"
ENTRYPOINT ["sh", "-c"]

# Show versions by default
CMD ["node -v && npm -v"]
